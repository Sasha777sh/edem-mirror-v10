# =====================================
# EDEM PROJECT - ENVIRONMENT VARIABLES
# =====================================
# Copy this file to .env and fill in your values

# =====================================
# DATABASE
# =====================================
# Database
DATABASE_URL=postgresql://user:password@localhost:5432/edem_db

# =====================================
# AUTHENTICATION (SUPABASE)
# =====================================
# Supabase
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# =====================================
# AI INTEGRATION
# =====================================
# OpenAI
OPENAI_API_KEY=your_openai_api_key

# =====================================
# CACHING & RATE LIMITING
# =====================================
# Redis for production rate limiting (optional)
# If not provided, uses in-memory store
REDIS_URL="redis://localhost:6379"
# OR use Upstash Redis for hosted solution
UPSTASH_REDIS_REST_URL=your_upstash_redis_rest_url
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_rest_token

# =====================================
# PAYMENTS - STRIPE (DISABLED - REPLACED WITH CRYPTO)
# =====================================
# Stripe
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# =====================================
# PAYMENTS - CRYPTO (NOWPAYMENTS)
# =====================================
# NOWPayments (Crypto)
NOWPAYMENTS_API_KEY=your_nowpayments_api_key
NOWPAYMENTS_IPN_SECRET=your_nowpayments_ipn_secret

# =====================================
# PAYMENTS - YOOKASSA (RUSSIA)
# =====================================
# YooKassa (Russia)
YOOKASSA_SHOP_ID=your_yookassa_shop_id
YOOKASSA_SECRET_KEY=your_yookassa_secret_key

# =====================================
# TELEGRAM BOT
# =====================================
# Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
NEXT_PUBLIC_TELEGRAM_BOT_USERNAME=your_telegram_bot_username

# =====================================
# APPLICATION CONFIG
# =====================================
# Application
NEXT_PUBLIC_APP_URL=https://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret

# =====================================
# ADDITIONAL SERVICES (OPTIONAL)
# =====================================
# Email service (if you add notifications)
# RESEND_API_KEY="re_..."

# Analytics (if you add more tracking)
# MIXPANEL_TOKEN="..."
# GOOGLE_ANALYTICS_ID="G-..."

# =====================================
# ANALYTICS & TRACKING
# =====================================
# PostHog for user analytics and feature flags
NEXT_PUBLIC_POSTHOG_KEY=your_posthog_key
NEXT_PUBLIC_POSTHOG_HOST=your_posthog_host

# Sentry for error tracking (optional)
SENTRY_DSN="https://...@sentry.io/..."
NEXT_PUBLIC_SENTRY_DSN="https://...@sentry.io/..."

# =====================================
# DATABASE EXTENSIONS
# =====================================
# Supabase service role key (for RAG imports)
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# =====================================
# AI PROVIDERS
# =====================================
# OpenAI API key (for embeddings)
OPENAI_API_KEY=your_openai_api_key

# =====================================
# DEVELOPMENT ONLY
# =====================================
# Set to development for local dev
NODE_ENV="development"
# Secret for cron job authentication
CRON_SECRET=your_cron_secret
